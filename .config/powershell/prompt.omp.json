{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "type": "path",
          "style": "plain",
          "foreground": "#f85149",
          "properties": {
            "style": "folder"
          }
        },
        {
          "type": "git",
          "style": "plain",
          "foreground": "#a371f7",
          "properties": {
            "branch_icon": "",
            "display_status": true,
            "prefix": "<#5FAAE8></>",
            "postfix": "<#5FAAE8></> "
          }
        },
        {
          "type": "exit",
          "style": "plain",
          "foreground": "#388bfd",
          "properties": {
            "prefix": "\u2717",
            "display_exit_code": false
          }
        },
        {
          "type": "text",
          "style": "plain",
          "foreground": "#388bfd",
          "properties": {
            "prefix": "",
            "text": "#",
            "postfix": ""
          }
        }
      ]
    }
  ],
  "final_space": true
}
