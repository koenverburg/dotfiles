// Place your settings in this file to overwrite the default settings
{
  // emmet
  "emmet.includeLanguages": {
    "razor": "html"
  },
  // formatting
  "[go]": {
    "editor.formatOnSave": true
  },
  "[powershell]": {
    "editor.formatOnSave": false
  },
  "[handlebars]": {
    "editor.formatOnSave": false
  },
  "[scss]": {
    "editor.formatOnSave": true
  },
  "[svg]": {
    "editor.formatOnSave": false
  },
  "[javascript]": {
    "editor.formatOnSave": false,
    "editor.formatOnSaveMode": "modifications"
  },
  "[javascriptreact]": {
    "editor.showUnused": true,
    "editor.formatOnSave": false,
    "editor.formatOnSaveMode": "modifications"
  },
  "javascript.updateImportsOnFileMove.enabled": "never",
  "[typescript]": {
    "editor.showUnused": true,
    "editor.formatOnSave": false,
    "editor.formatOnSaveMode": "modifications"
  },
  "[typescriptreact]": {
    "editor.showUnused": true,
    "editor.formatOnSave": true,
    "editor.formatOnSaveMode": "modifications",
    "editor.defaultFormatter": "vscode.typescript-language-features"
  },
  "editor.codeActionsOnSave": {
    "source.fixAll.tslint": true,
    "source.organizeImports": false
  },
  "[xml]": {
    "editor.formatOnSave": false
  },
  // excluding folders
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/node_modules": true,
    "**/flow-typed": true,
    "**/_build": true
  },
  "files.associations": {
    "*.json": "jsonc",
    "*.side": "jsonc",
    "*.config": "xml"
  },
  // "vscode-neovim.neovimPath": "C:\\tools\\neovim\\Neovim\\bin\\nvim.exe",
  // go
  "go.formatTool": "goimports",
  // csharp
  "csharp.suppressHiddenDiagnostics": true,
  "csharp.suppressProjectJsonWarning": true,
  "csharp.suppressDotnetInstallWarning": true,
  "csharp.supressBuildAssetsNotification": true,
  "csharp.suppressDotnetRestoreNotification": true,
  "window.titleBarStyle": "custom",
  "window.title": "${dirty} ${activeEditorMedium}${separator}${rootName}",
  "workbench.statusBar.visible": true,
  "workbench.editor.showIcons": false,
  "workbench.sideBar.location": "left",
  "workbench.activityBar.visible": true,
  "workbench.editor.tabSizing": "shrink",
  "workbench.editor.tabCloseButton": "left",
  "workbench.colorTheme": "GitHub Dark Default",
  "workbench.editor.enablePreviewFromQuickOpen": false,
  "workbench.editor.pinnedTabSizing": "compact",
  // Editor
  "editor.rulers": [
    80,
    120
  ],
  "editor.fontSize": 15,
  "editor.tabSize": 2,
  "editor.lineHeight": 29,
  "editor.lineNumbers": "on",
  "editor.formatOnSave": true,
  "editor.glyphMargin": false,
  "editor.formatOnPaste": true,
  "editor.fontLigatures": false,
  "explorer.confirmDelete": false,
  "editor.cursorBlinking": "solid",
  "editor.matchBrackets": "always",
  "editor.detectIndentation": false,
  "editor.snippetSuggestions": "top",
  "editor.occurrencesHighlight": true,
  "editor.renderLineHighlight": "all",
  "editor.suggest.localityBonus": true,
  "editor.renderWhitespace": "all",
  "editor.tabCompletion": "onlySnippets", // I what to see all
  "editor.wordSeparators": "/\\()\"':,.;<>~!@#$%^&*|+=[]{}`?-",
  "editor.fontFamily": "'Cascadia Code', 'Fira Code Retina', Consolas, 'Courier New', monospace",
  "editor.tokenColorCustomizations": {
    "enabled": true
  },
  // Git
  "git.detectSubmodules": false,
  "git.detectSubmodulesLimit": 9999,
  "gitlens.codeLens.enabled": false,
  // misc stuff
  "explorer.openEditors.visible": 0,
  "files.trimTrailingWhitespace": true,
  "typescript.referencesCodeLens.enabled": true,
  "javascript.referencesCodeLens.enabled": true,
  "typescript.implementationsCodeLens.enabled": true,
  "breadcrumbs.enabled": false, // Still taking up space
  "typescript.updateImportsOnFileMove.enabled": "never",
  "powershell.integratedConsole.focusConsoleOnExecute": false,
  "terminal.integrated.fontFamily": "DejaVu Sans Mono for Powerline",
  "cSpell.userWords": [
    "Cust",
    "Deduplication",
    "Outsystems",
    "Umbraco",
    "XSRF",
    "bedankt",
    "childaid",
    "datalayer",
    "godotenv",
    "organisation",
    "recaptcha",
    "uwork"
  ],
  "editor.minimap.enabled": false,
  "files.autoSave": "onFocusChange",
  "eslint.format.enable": true,
  "extensions.ignoreRecommendations": true,
  "go.toolsManagement.autoUpdate": true,
}